<h1>users#show</h1>
<p>名前 : <%= @user.name %></p>
<p>メールアドレス : <%= @user.email %></p>
<p>プロフィール : <%= @user.profile %></p>

<% if current_user.id == @user.id %>
  <%= link_to "編集する", edit_user_registration_path %>
<% end %>

<h2>ユーザーの投稿一覧</h2>
<% @user.schedules.each do |t| %>
  <%= t.user.name %>
  <%= t.user.email %>
      <%= t.title %>
      <%= t.cost %>
      <%= t.item %>
      <%= t.comment %>
<% end %>

<h2>ユーザーがいいねした投稿一覧</h2>
<% @user.liked_schdules.each do |t| %>
  <%= t.user.name %>
  <%= t.user.email %>
      <%= t.title %>
      <%= t.cost %>
      <%= t.item %>
      <%= t.comment %>
<% end %>

<%= link_to "趣味一覧に戻る", schedules_path %>