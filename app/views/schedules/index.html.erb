<h1>趣味一覧</h1>
<h3>一覧ページ</h3>

<h3>投稿を検索</h3>
 <%= form_tag({controller:"schedules",action:"index"}, method: :get) do %>
   <%= text_field_tag :search %>
   <%= submit_tag '検索する'  %>
<% end %>

<%= form_tag({controller:"schedules",action:"index"}, method: :get) do %>
    <% Tag.all.each do |t| %>
        <li><%= check_box :tag_ids, t.name %><%= t.name %></li>
    <% end %>
    <%= submit_tag '検索' %>
<% end %>

<%= form_tag({controller:"schedules",action:"index"}, method: :get) do %>
    <%= text_field_tag :tag %>
    <%= submit_tag 'タグを追加' %>
<% end %>

<%= button_to "ログイン", schedules_path %>
<%= button_to "新規登録", new_user_registration_path %>
<% if user_signed_in? %>
  <%= link_to "マイページへ", user_path(current_user.id) %>
<% end %>
<%= button_to 'ログアウト', destroy_user_session_path, method: :delete %>
<%= link_to "新規投稿へ", new_schedule_path %>
<div class="schedules-container">
  <% @schedules.each do |t| %>
    <div class="schedule">
    <%= image_tag t.image_url, size: "250x200" if t.image? %>
      <%= t.user.email %>
      <%= t.title %>
      <%= t.cost %>
      <%= t.item %>
      <%= t.comment %>

      <%= link_to "詳細へ", schedule_path(t.id) %>
      <% if user_signed_in? && current_user.id == t.user_id %>
      <%= link_to "編集する", edit_schedule_path(t.id) %>
      <%= button_to "削除する", schedule_path(t.id), method: :delete %>  
      <% end %>
      
 <% if user_signed_in? %>
     <% if current_user.already_liked?(t) %>
        <%= link_to schedule_like_path(id: t.id, schedule_id: t.id), data: { turbo_method: :delete } do %>
            <p>いいねを取り消す</p><%= t.likes.count %>
        <% end %>
     <% else %>
        <%= link_to schedule_likes_path(id: t.id, schedule_id: t.id), data: { turbo_method: :post }  do %>
            <p>いいね</p><%= t.likes.count %>
        <% end %>
     <% end %>
<% else %>
    <p>いいねの数 = </p><%= t.likes.count %>
<% end %>

    </div>
  <% end %>
</div>